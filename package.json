{
  "name": "spotify-widget",
  "version": "1.0.0",
  "description": "A small widget to show the most important Spotify information while you work",
  "main": "./out/main/index.js",
  "author": "Justin Wallace",
  "license": "MIT",
  "homepage": "https://github.com/jpwallace22/spotify-widget",
  "keywords": [
    "Spotify",
    "widget",
    "electron"
  ],
  "packageManager": "yarn@1.22.19",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "dev:server": "nodemon src/renderer/src/api/server.ts",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:win": "npm run build && electron-builder --win --config",
    "build:mac": "electron-vite build && electron-builder --mac --config",
    "build:linux": "electron-vite build && electron-builder --linux --config"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^1.0.3",
    "@electron-toolkit/utils": "^1.0.2",
    "@motionone/solid": "^10.16.0",
    "classnames": "^2.3.2",
    "csstype": "^3.1.1",
    "electron-store": "^8.1.0",
    "electron-updater": "^5.3.0",
    "solid-styled-components": "^0.28.5",
    "spotify-playback-sdk-node": "^1.0.2",
    "spotify-web-api-node": "^5.0.2"
  },
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron/notarize": "^1.2.3",
    "@types/node": "16.18.11",
    "@types/spotify-web-api-node": "^5.0.7",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "electron": "^21.3.3",
    "electron-builder": "^23.6.0",
    "electron-vite": "^1.0.17",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-solid": "^0.9.1",
    "prettier": "^2.8.2",
    "solid-js": "^1.6.8",
    "typescript": "^4.9.4",
    "vite": "^4.0.4",
    "vite-plugin-solid": "^2.5.0",
    "vite-plugin-solid-svg": "^0.6.1"
  }
}
